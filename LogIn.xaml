<Window x:Class="Telecom_Operator_Repair.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telecom_Operator_Repair"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Авторизация"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="#FF333333"/>

        <!-- Форма входа -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
            <!-- Логин -->
            <TextBlock Text="Логин" 
                       Margin="5,0,5,5"
                       Foreground="#FF333333"/>
            <TextBox x:Name="LoginTextBox" 
                     Height="30"
                     Margin="5,0,5,15"
                     Padding="5"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" 
                       Margin="5,0,5,5"
                       Foreground="#FF333333"/>
            <PasswordBox x:Name="PasswordBox" 
                        Height="30"
                        Margin="5,0,5,20"
                        Padding="5"/>

            <!-- Кнопка входа -->
            <Button x:Name="LoginButton" 
                    Content="Вход" 
                    Height="35"
                    Width="120"
                    HorizontalAlignment="Center"
                    Background="#FF0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0" Click="LoginButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
